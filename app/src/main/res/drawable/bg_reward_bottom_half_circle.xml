<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#f0f0f0" />
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
            <size
                android:width="16dp"
                android:height="8dp" />
            <stroke
                android:width="1px"
                android:color="@color/bill_line_border" />
        </shape>
    </item>
    <item
        android:bottom="0.01px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape>
            <solid android:color="#f0f0f0" />
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
            <size
                android:width="16dp"
                android:height="8dp" />
        </shape>
    </item>
</layer-list>