<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/itemPressed">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ffffff" />
                    <corners android:radius="6dp" />
                    <stroke
                        android:width="1px"
                        android:color="@color/bill_line_border" />
                </shape>
            </item>
            <item
                android:bottom="1px"
                android:left="1px"
                android:right="1px"
                android:top="1px">
                <shape>
                    <solid android:color="@color/itemPressed" />
                    <corners android:radius="6dp" />
                    <stroke
                        android:width="1px"
                        android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ffffff" />
                    <corners android:radius="6dp" />
                    <stroke
                        android:width="1px"
                        android:color="@color/bill_line_border" />
                </shape>
            </item>

            <item
                android:bottom="1px"
                android:left="1px"
                android:right="1px"
                android:top="1px">
                <shape>
                    <solid android:color="#ffffff" />
                    <corners android:radius="6dp" />
                    <stroke
                        android:width="1px"
                        android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>