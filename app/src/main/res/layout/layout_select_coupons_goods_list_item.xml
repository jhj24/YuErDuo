<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_select_goods"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:id="@+id/layout_order_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_select_good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="产品名称"
                android:textColor="#120c0c"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_select_edit_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量： " />

            <ImageView
                android:id="@+id/iv_select_goods_sub"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:alpha="0.5"
                android:clickable="true"
                android:padding="3dp"
                android:src="@drawable/down" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_select_count"
                    style="@android:style/Widget.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="10" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_select_goods_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:alpha="0.5"
                android:clickable="true"
                android:padding="3dp"
                android:src="@drawable/up" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/borderDark" />
</LinearLayout>