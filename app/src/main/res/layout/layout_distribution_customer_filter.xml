<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_customer_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_customer_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/bill_line_title"
            android:textSize="@dimen/bill_line_title"
            android:text="客户名称:" />

        <EditText
            android:id="@+id/et_customer_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColorHint="@color/bill_line_hint"
            android:textColor="@color/bill_line_text"
            android:textSize="@dimen/bill_line_title"
            android:hint="请输入"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:singleLine="true" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/borderLight" />

    <LinearLayout
        android:id="@+id/layout_customer_state"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/bill_line_title"
            android:textSize="@dimen/bill_line_title"
            android:text="分配状态:" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/bill_line_hint"
                android:textColor="@color/bill_line_text"
                android:textSize="@dimen/bill_line_title"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="请选择" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/account_ic_right_arrow" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/borderLight" />

    <LinearLayout
        android:id="@+id/layout_sales_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/bill_line_title"
            android:textSize="@dimen/bill_line_title"
            android:text="销售区域:" />

        <TextView
            android:id="@+id/tv_sales_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/bill_line_hint"
            android:textColor="@color/bill_line_text"
            android:textSize="@dimen/bill_line_title"
            android:layout_weight="1"
            android:hint="请选择" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/account_ic_right_arrow" />
    </LinearLayout>

</LinearLayout>